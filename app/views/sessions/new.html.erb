<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= simple_form_for :session, url: sessions_path do |f| %>
			<%= f.input :email %>
			<%= f.input :password %>
			<%= f.button :submit, "Sign in", class: "btn dtn-large btn-primary" %>
		<% end %>

		<p>New User? <%= link_to "Sign up now", signup_path %></p>
	</div>
</div>
